



    <%= form_for purchase, url: user_purchases_path(signed_in_user) do |f| %>
      <div class="row">
        <%= f.hidden_field :user_id %>
        <div class="col s1">
            <%= f.label "Store/Location" %>
            <%= f.text_field :location %>
        </div>
        <div class="col s2">
            <%= f.label "Date" %>
            <%= f.date_field :date %>
        </div>
        <div class="col s1">
            <%= f.label "Total" %>
            <%=f.text_field  :total  %>
        </div>
        <div class="col s3">
            <%= f.label "Purchase Notes" %>
            <%= f.text_area :note %>
        </div>
        <div class="col s2">
            <%= f.label "Category" %>
            <%= f.collection_select :category_id, Category.my_categories(signed_in_user), :id, :name  %> 
        </div>
        <div class="col s2">
            <%= f.label "Add New Category" %>
            <%= f.fields_for :category_attributes do |cat| %>
                <%= cat.text_field :name %>
            <% end %>
        </div>
      </div>
      <div class="row">
        <%= submit_tag "Save", class: "btn"  %>
        <%= submit_tag "Save and add another", class: "btn"  %>
      </div>
  <% end %>