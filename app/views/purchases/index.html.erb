


<h5>All purchases </h5>

<div class="row" style="display:block">
  <%= render partial: '/purchases/purchase_headers' %>
</div>
<% @purchases.each do |pur| %>
  <div class="row" style="margin-bottom:0px">
    <%= render partial: '/purchases/purchase', locals: { purchase: pur } %>
    <div class="right">
      <p><a href="<%= edit_user_purchase_path(signed_in_user, pur)%>" class="btn">Edit</a>&nbsp;&nbsp;<a style="float:right" href="<%= delete_user_purchase_path(signed_in_user, pur)%>" class="btn">Delete</a></p>
    </div>
  </div>
<% end %>