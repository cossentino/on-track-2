<%= form_for user do |f| %>
  <%= f.label "Email" %><br>
  <%= email_form_field(f) %><br><br>
  <%= f.label "Password" if !signed_in_user %><br>
  <%= password_form_field(f) %>
  <%= f.label "First Name" %>
  <%= f.text_field :first_name %>
  <%= f.label "Last Name" %>
  <%= f.text_field :last_name %>
  <%= f.label "Monthly Income" %>
  <%= f.text_field :income %>
  <%= f.submit %>
<% end %>

